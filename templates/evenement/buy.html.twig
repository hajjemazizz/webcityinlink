{% extends 'basefront.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
<style>
    /* Custom styles for the payment form */
    #checkout-container {
        display: flex;
        justify-content: space-between;
        max-width: 800px;
        margin: 0 auto;
    }

    #payment-form {
        flex: 1;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #product-preview {
        flex: 1;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #product-preview h2 {
        margin-bottom: 10px;
        font-size: 1.5em;
        color: #333;
    }

    #product-details {
        text-align: center;
    }

    #product-details p {
        margin-bottom: 10px;
    }

    #product-details img {
        max-width: 100px;
        border-radius: 5px;
    }

</style>
<h1>Checkout - Get Your Ticket When You Complete the Payment</h1>

<div style="margin-top:50px;margin-bottom:50px;" id="checkout-container">
    <div id="payment-form">
        <form id="stripe-form" action="{{ path('stripe_payment') }}" method="POST">
            <label for="card-element">Credit or debit card</label>
            <div id="card-element">
                <!-- A Stripe Element will be inserted here. -->
            </div>

            <!-- Used to display form errors. -->
            <div id="card-errors" role="alert"></div>

            <button id="submit">Submit Payment</button>
        </form>
    </div>

    <div id="product-preview">
        <div id="product-details">
            <strong><h2>{{ evenement.nom }}</h2></strong>
            <img src="{{ asset('uploads/images/' ~ evenement.image) }}" alt="not found">

            <p>{{ evenement.description }}</p>
            <p>{{ evenement.dateE ? evenement.dateE|date('Y-m-d') : '' }}</p>
            <!-- Include the product price here -->
            <p> 6.55$ </p>
        </div>
    </div>
</div>

<script src="https://js.stripe.com/v3/"></script>
<script>
    var stripe = Stripe('pk_test_51N3mM8EJUeUWMx2GKG5o6vQxnKpBWLi0MGIkN7jaE1KqLYl1GSS5X4RYQkocTMRr25HejCyJj2XGqyW4m9hThJnt00YjXA2a5v');
    var elements = stripe.elements();
    var cardElement = elements.create('card');

    cardElement.mount('#card-element');

    var stripeForm = document.getElementById('stripe-form');
    var errorElement = document.getElementById('card-errors');

    stripeForm.addEventListener('submit', function (event) {
        event.preventDefault();

        // Retrieve product price from the HTML
        var productPriceElement = document.querySelector('#product-preview p:last-child');
        var productPrice = parseFloat(productPriceElement.textContent.trim()); // Trim whitespace and parse the price as float

        stripe.createToken(cardElement, {
            amount: productPrice * 100, // Convert price to cents
            metadata: {
                'product_price': productPrice // Include the product price as metadata
            }
        }).then(function (result) {
            if (result.error) {
                errorElement.textContent = result.error.message;
            } else {
                stripeTokenHandler(result.token);
            }
        });
    });

    function stripeTokenHandler(token) {
        var form = document.getElementById('stripe-form');
        var hiddenInput = document.createElement('input');
        hiddenInput.setAttribute('type', 'hidden');
        hiddenInput.setAttribute('name', 'stripeToken');
        hiddenInput.setAttribute('value', token.id);
        form.appendChild(hiddenInput);

        form.submit();
    }
</script>


{% endblock %}
